<%= div_for project do %>
  <p> <%= project.name %> </p>
  <%= link_to "Edit", edit_project_path(project) %>
  <%= link_to "Remove", project, method: :delete, class:"remove", data: { confirm: "Are you sure you want to delete this project?" } %>
  <span> Created <%= distance_of_time_in_words(Time.now, project.created_at) %> </span>
<% end %>
